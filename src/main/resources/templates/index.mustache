{{>layout/header}}

<h1>스프링 부트로 만든 웹 서비스 게시판 </h1>

<div class="col-md-12">
        <div class="row">
                <div class="col-md-6">
                    <a href="/posts/save" role="button" class="btn btn-primary">
                        글 등록
                    </a>
                    {{#loginUserEmail}}
                        Logged in as: <span id="user">{{loginUserEmail}}</span>

                        <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                    {{/loginUserEmail}}
                    {{^loginUserEmail}}
                        <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                    {{/loginUserEmail}}
                </div>
        </div>
        <br>
        <!--목록 출력 영역-->
        <table class="table table-horizontal table-boarded">
            <thead class="thead-strong">
                <tr>
                    <th>게시글번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>최종수정일</th>
                </tr>
            </thead>
            <tbody id="tbody">
                {{#posts}}
                    <tr>
                        <td>{{id}}</td>
                        <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                        <td>{{author}}(<a href="/user/info/{{email}}">{{email}}</a>)
                        </td>
                        <td>{{modifiedDate}}</td>
                    </tr>
                {{/posts}}
            </tbody>
        </table>
</div>

{{>layout/footer}}